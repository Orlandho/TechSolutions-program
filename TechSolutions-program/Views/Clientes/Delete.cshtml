@model TechSolutions_program.Models.Cliente

@{
    ViewData["Title"] = "Eliminar cliente";
}

<h1 class="h3">Eliminar cliente</h1>

<div class="alert alert-warning mt-3">
    ¿Seguro que deseas eliminar este cliente? Esta acción no se puede deshacer.
</div>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Razón social</dt>
            <dd class="col-sm-9">@Model.RazonSocial</dd>

            <dt class="col-sm-3">RUC</dt>
            <dd class="col-sm-9">@Model.RUC</dd>

            <dt class="col-sm-3">Correo</dt>
            <dd class="col-sm-9">@Model.EmailContacto</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

