@model TechSolutions_program.Models.Cliente

@{
    ViewData["Title"] = "Detalle de cliente";
}

<h1 class="h3">Detalle de cliente</h1>

<div class="card mt-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Razón social</dt>
            <dd class="col-sm-9">@Model.RazonSocial</dd>

            <dt class="col-sm-3">RUC</dt>
            <dd class="col-sm-9">@Model.RUC</dd>

            <dt class="col-sm-3">Correo</dt>
            <dd class="col-sm-9">@Model.EmailContacto</dd>

            <dt class="col-sm-3">Teléfono</dt>
            <dd class="col-sm-9">@Model.Telefono</dd>

            <dt class="col-sm-3">Dirección</dt>
            <dd class="col-sm-9">@Model.Direccion</dd>
        </dl>
    </div>
</div>

<div class="d-flex gap-2 mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">Editar</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">Eliminar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>

