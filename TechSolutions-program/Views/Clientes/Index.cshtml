@model IEnumerable<TechSolutions_program.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Clientes</h1>
    @if (User.IsInRole("Lider") || User.IsInRole("Administrador"))
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo cliente
        </a>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No hay clientes registrados.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead class="table-light">
                <tr>
                    <th>Razón social</th>
                    <th>RUC</th>
                    <th>Correo</th>
                    <th>Teléfono</th>
                    <th>Dirección</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model)
                {
                    <tr>
                        <td><strong>@cliente.RazonSocial</strong></td>
                        <td>@cliente.RUC</td>
                        <td>
                            <a href="mailto:@cliente.EmailContacto" class="text-decoration-none">
                                <i class="bi bi-envelope"></i> @cliente.EmailContacto
                            </a>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(cliente.Telefono))
                            {
                                <i class="bi bi-telephone"></i> @cliente.Telefono
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                        <td>@cliente.Direccion</td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@cliente.Id" 
                                   class="btn btn-sm btn-outline-info" title="Ver detalles">
                                    <i class="bi bi-eye"></i>
                                </a>
                                @if (User.IsInRole("Lider") || User.IsInRole("Administrador"))
                                {
                                    <a asp-action="Edit" asp-route-id="@cliente.Id" 
                                       class="btn btn-sm btn-outline-warning" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@cliente.Id" 
                                       class="btn btn-sm btn-outline-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

