@model IEnumerable<TechSolutions_program.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Clientes</h1>
    <a asp-action="Create" class="btn btn-primary">Nuevo cliente</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No hay clientes registrados.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Razón social</th>
                    <th>RUC</th>
                    <th>Correo</th>
                    <th>Teléfono</th>
                    <th>Dirección</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model)
                {
                    <tr>
                        <td>@cliente.RazonSocial</td>
                        <td>@cliente.RUC</td>
                        <td>@cliente.EmailContacto</td>
                        <td>@cliente.Telefono</td>
                        <td>@cliente.Direccion</td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@cliente.Id" class="btn btn-sm btn-outline-info">Ver</a>
                            <a asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-sm btn-outline-warning">Editar</a>
                            <a asp-action="Delete" asp-route-id="@cliente.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

