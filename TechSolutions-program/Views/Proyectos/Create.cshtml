@model TechSolutions_program.Models.Proyecto

@{
    ViewData["Title"] = "Crear proyecto";
    var clientes = ViewBag.Clientes as IEnumerable<TechSolutions_program.Models.Cliente>;
}

<div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">
                <i class="bi bi-plus-circle"></i> Crear Proyecto
            </h1>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>

        <div class="card shadow">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Nombre" class="form-label">
                                <i class="bi bi-folder"></i> Nombre del Proyecto <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Sistema de Gestión" />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="ClienteId" class="form-label">
                                <i class="bi bi-building"></i> Cliente <span class="text-danger">*</span>
                            </label>
                            <select asp-for="ClienteId" class="form-select">
                                <option value="">-- Seleccione un cliente --</option>
                                @if (clientes != null)
                                {
                                    foreach (var cliente in clientes)
                                    {
                                        <option value="@cliente.Id">@cliente.RazonSocial</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="ClienteId" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label">
                            <i class="bi bi-text-paragraph"></i> Descripción
                        </label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3" 
                                  placeholder="Describe el alcance y objetivos del proyecto..."></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="FechaInicio" class="form-label">
                                <i class="bi bi-calendar-event"></i> Fecha de Inicio <span class="text-danger">*</span>
                            </label>
                            <input asp-for="FechaInicio" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="FechaInicio" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="FechaFinEstimada" class="form-label">
                                <i class="bi bi-calendar-check"></i> Fecha Fin Estimada <span class="text-danger">*</span>
                            </label>
                            <input asp-for="FechaFinEstimada" type="date" class="form-control" 
                                   value="@DateTime.Now.AddMonths(3).ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="FechaFinEstimada" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Presupuesto" class="form-label">
                                <i class="bi bi-cash-stack"></i> Presupuesto <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Presupuesto" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Presupuesto" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Estado" class="form-label">
                                <i class="bi bi-flag"></i> Estado
                            </label>
                            <select asp-for="Estado" class="form-select">
                                <option value="Planificación" selected>Planificación</option>
                                <option value="En Desarrollo">En Desarrollo</option>
                                <option value="Pruebas">Pruebas</option>
                                <option value="Finalizado">Finalizado</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Prioridad" class="form-label">
                                <i class="bi bi-exclamation-triangle"></i> Prioridad
                            </label>
                            <select asp-for="Prioridad" class="form-select">
                                <option value="Baja">Baja</option>
                                <option value="Media" selected>Media</option>
                                <option value="Alta">Alta</option>
                            </select>
                            <span asp-validation-for="Prioridad" class="text-danger small"></span>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Crear Proyecto
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Validación de fechas en el cliente
        document.querySelector('form').addEventListener('submit', function(e) {
            const fechaInicio = new Date(document.querySelector('[name="FechaInicio"]').value);
            const fechaFin = new Date(document.querySelector('[name="FechaFinEstimada"]').value);
            
            if (fechaFin <= fechaInicio) {
                e.preventDefault();
                alert('La fecha fin debe ser posterior a la fecha de inicio.');
                return false;
            }
        });
    </script>
}
