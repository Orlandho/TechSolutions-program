@model TechSolutions_program.Models.Proyecto

@{
    ViewData["Title"] = "Detalle de proyecto";
}

<h1 class="h3">Detalle de proyecto</h1>

<div class="card mt-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Proyecto</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3">Cliente</dt>
            <dd class="col-sm-9">@Model.Cliente</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">@Model.Estado</dd>

            <dt class="col-sm-3">Prioridad</dt>
            <dd class="col-sm-9">@Model.Prioridad</dd>

            <dt class="col-sm-3">Presupuesto</dt>
            <dd class="col-sm-9">@Model.Presupuesto.ToString("C2")</dd>

            <dt class="col-sm-3">Inicio</dt>
            <dd class="col-sm-9">@Model.FechaInicio.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Fin estimado</dt>
            <dd class="col-sm-9">@Model.FechaFinEstimada.ToString("dd/MM/yyyy")</dd>
        </dl>
    </div>
</div>

<div class="d-flex gap-2 mt-3">
    @if (User.IsInRole("Lider") || User.IsInRole("Administrador"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">Editar</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">Eliminar</a>
    }
    <a asp-controller="Reportes" asp-action="Descargar" asp-route-tipoReporte="pdf" asp-route-proyectoId="@Model.Id" class="btn btn-outline-secondary">PDF</a>
    <a asp-controller="Reportes" asp-action="Descargar" asp-route-tipoReporte="excel" asp-route-proyectoId="@Model.Id" class="btn btn-outline-success">Excel</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
