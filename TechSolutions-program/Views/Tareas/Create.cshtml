@model TechSolutions_program.Models.Tarea

@{
    ViewData["Title"] = "Crear tarea";
    var proyectos = ViewBag.Proyectos as IEnumerable<TechSolutions_program.Models.Proyecto>;
    var usuarios = ViewBag.Usuarios as IEnumerable<TechSolutions_program.Models.Usuario>;
}

<div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">
                <i class="bi bi-plus-circle"></i> Crear Tarea
            </h1>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>

        <div class="card shadow">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label">
                            <i class="bi bi-card-text"></i> Descripción de la Tarea <span class="text-danger">*</span>
                        </label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3" 
                                  placeholder="Describe la tarea a realizar..."></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ProyectoId" class="form-label">
                                <i class="bi bi-folder"></i> Proyecto <span class="text-danger">*</span>
                            </label>
                            <select asp-for="ProyectoId" class="form-select">
                                <option value="">-- Seleccione un proyecto --</option>
                                @if (proyectos != null)
                                {
                                    foreach (var proyecto in proyectos)
                                    {
                                        <option value="@proyecto.Id">@proyecto.Nombre</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="ProyectoId" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="ResponsableId" class="form-label">
                                <i class="bi bi-person-check"></i> Responsable <span class="text-danger">*</span>
                            </label>
                            <select asp-for="ResponsableId" class="form-select">
                                <option value="">-- Seleccione un responsable --</option>
                                @if (usuarios != null)
                                {
                                    foreach (var usuario in usuarios)
                                    {
                                        <option value="@usuario.Id">
                                            @usuario.NombreCompleto (@usuario.Email)
                                        </option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="ResponsableId" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Estado" class="form-label">
                                <i class="bi bi-flag"></i> Estado
                            </label>
                            <select asp-for="Estado" class="form-select">
                                <option value="Pendiente" selected>Pendiente</option>
                                <option value="En Progreso">En Progreso</option>
                                <option value="Finalizado">Finalizado</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Prioridad" class="form-label">
                                <i class="bi bi-exclamation-triangle"></i> Prioridad
                            </label>
                            <select asp-for="Prioridad" class="form-select">
                                <option value="Baja">Baja</option>
                                <option value="Media" selected>Media</option>
                                <option value="Alta">Alta</option>
                            </select>
                            <span asp-validation-for="Prioridad" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="FechaLimite" class="form-label">
                                <i class="bi bi-calendar-check"></i> Fecha Límite
                            </label>
                            <input asp-for="FechaLimite" type="date" class="form-control" 
                                   value="@DateTime.Now.AddDays(7).ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="FechaLimite" class="text-danger small"></span>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Crear Tarea
                        </button>
                    </div>
                </form>
            </div>
        </div>

        @if (proyectos == null || !proyectos.Any())
        {
            <div class="alert alert-warning mt-3">
                <i class="bi bi-exclamation-triangle"></i>
                <strong>Atención:</strong> No hay proyectos disponibles. 
                <a asp-controller="Proyectos" asp-action="Create">Crea un proyecto primero</a>.
            </div>
        }

        @if (usuarios == null || !usuarios.Any())
        {
            <div class="alert alert-warning mt-3">
                <i class="bi bi-exclamation-triangle"></i>
                <strong>Atención:</strong> No hay usuarios disponibles en el sistema.
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

