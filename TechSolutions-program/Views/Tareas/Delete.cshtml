@model TechSolutions_program.Models.Tarea

@{
    ViewData["Title"] = "Eliminar tarea";
}

<h1 class="h3">Eliminar tarea</h1>

<div class="alert alert-warning mt-3">
    ¿Seguro que deseas eliminar esta tarea? Esta acción no se puede deshacer.
</div>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Descripción</dt>
            <dd class="col-sm-9">@Model.Descripcion</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">@Model.Estado</dd>

            <dt class="col-sm-3">Prioridad</dt>
            <dd class="col-sm-9">@Model.Prioridad</dd>

            <dt class="col-sm-3">Proyecto</dt>
            <dd class="col-sm-9">@Model.ProyectoId</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

