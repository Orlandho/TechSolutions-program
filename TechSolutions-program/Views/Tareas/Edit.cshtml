@model TechSolutions_program.Models.Tarea

@{
    ViewData["Title"] = "Editar tarea";
}

<h1 class="h3">Editar tarea</h1>

<form asp-action="Edit" method="post" class="mt-4">
    @Html.AntiForgeryToken()
    <input asp-for="Id" type="hidden" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="Estado" class="form-label"></label>
            <select asp-for="Estado" class="form-select">
                <option value="Pendiente">Pendiente</option>
                <option value="En Progreso">En Progreso</option>
                <option value="Finalizado">Finalizado</option>
            </select>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Prioridad" class="form-label"></label>
            <select asp-for="Prioridad" class="form-select">
                <option value="Baja">Baja</option>
                <option value="Media">Media</option>
                <option value="Alta">Alta</option>
            </select>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="FechaLimite" class="form-label"></label>
            <input asp-for="FechaLimite" type="date" class="form-control" />
            <span asp-validation-for="FechaLimite" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="ResponsableId" class="form-label"></label>
            <input asp-for="ResponsableId" class="form-control" />
            <span asp-validation-for="ResponsableId" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="ProyectoId" class="form-label"></label>
            <input asp-for="ProyectoId" type="number" class="form-control" />
            <span asp-validation-for="ProyectoId" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Guardar cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

