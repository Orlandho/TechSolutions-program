@model IEnumerable<TechSolutions_program.Models.Tarea>

@{
    ViewData["Title"] = "Tareas";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Tareas</h1>
    <a asp-action="Create" class="btn btn-primary">Nueva tarea</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No hay tareas registradas.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Descripción</th>
                    <th>Estado</th>
                    <th>Prioridad</th>
                    <th>ResponsableId</th>
                    <th>Fecha límite</th>
                    <th>Proyecto</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tarea in Model)
                {
                    <tr>
                        <td>@tarea.Descripcion</td>
                        <td>
                            <span class="badge @(tarea.Estado == "Finalizado" ? "bg-success" : tarea.Estado == "En Progreso" ? "bg-warning text-dark" : "bg-secondary")">
                                @tarea.Estado
                            </span>
                        </td>
                        <td>
                            <span class="badge @(tarea.Prioridad == "Alta" ? "bg-danger" : tarea.Prioridad == "Media" ? "bg-warning text-dark" : "bg-info")">
                                @tarea.Prioridad
                            </span>
                        </td>
                        <td>@tarea.ResponsableId</td>
                        <td>@(tarea.FechaLimite.HasValue ? tarea.FechaLimite.Value.ToString("dd/MM/yyyy") : "-")</td>
                        <td>@tarea.ProyectoId</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@tarea.Id" class="btn btn-sm btn-outline-warning">Editar</a>
                            <a asp-action="Delete" asp-route-id="@tarea.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                            <form asp-action="CambiarEstado" asp-route-id="@tarea.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                @if (tarea.Estado == "Pendiente")
                                {
                                    <button type="submit" name="nuevoEstado" value="En Progreso" class="btn btn-sm btn-outline-info">Iniciar</button>
                                }
                                else if (tarea.Estado == "En Progreso")
                                {
                                    <button type="submit" name="nuevoEstado" value="Finalizado" class="btn btn-sm btn-outline-success">Completar</button>
                                }
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

